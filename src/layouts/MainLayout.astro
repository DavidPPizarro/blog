---
//componet import
import MainHead from "./MainHead.astro";
import Nav from "@/components/Nav.astro";
import Footer from "@/components/Footer.astro";

//import css style
import "@/styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "My Blog",
  description = "My musings about te Astro framework",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <MainHead {title} {description} />
  <body>
    <Nav />
    <main>
      <slot> Default Text</slot>
    </main>
    <Footer />
  </body>
</html>
